      -# TWITTER SECTION
      %section.section.twitter
        .row
          .section-title
            %a{ href: "http://www.twitter.com/gamejamodb", title: "Twitter de Game Jam ODB", target: "_blank" }
              %img{ src: "img/twitter.svg", alt: "Twitter de Game Jam ODB" }
          .twitter-user
            %a{ href: "http://www.twitter.com/gamejamodb", title: "Twitter de Game Jam ODB", target: "_blank" }
              @gamejamODB
          .row
            .five.columns.centered
              %p.twitter-info
                Usa el hashtag local
                %strong
                  %a{ href: "https://twitter.com/hashtag/gamejamODB", title: "Utiliza el hashtag gamejamODB", target: "_blank" }
                    = "#gamejamODB"
                y el global
                %strong
                  %a{ href: "https://twitter.com/hashtag/GGJ15", title: "Utiliza el hashtag GGJ15", target: "_blank" }
                    = "#GGJ15"
